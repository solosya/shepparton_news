{% set page = _Page.getPageData(slug) %}

{{ set(this, 'title', page.title | raw) }}

<!-- Begin Container -->
<div class="page_section" style="height:100%">
    <section class="container" style="max-width:none;height:100%">
        <!-- Begin Terms -->
        <div class="content-wrap clearfix" style="height:100%">
            <div class="row" style="height:100%">
                <div class="col-sm-9" style="height:100%">
                    <div class="content_area is-wrapper clearfix page-content">
                        <div class="col-sm-9 header">
                            <div class="row">
                                <div class="hk">
                                <h2>{{page.title}}</h2>

                                <p>&nbsp;</p>
                                </div>
                            </div>
                        </div>                        
                        {{page.content | raw}}
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>