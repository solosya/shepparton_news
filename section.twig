{{ set(this, 'title', _Blog.getBlogTitle()) }}
{% if (networkData is empty) %}
    {% set networkData = _Network.getNetworkData() %} 
    {% set cache = setCache("networkData", networkData, 500) %} 
{% endif %}


{% set site     = networkData.title | lower | split(" ")[0]%}
{% set blogData = _Blog.getBlog() %}


{% set limit = 18 %}

{% set articlesArr = _Blog.getBlogFeed({'limit': limit, 'offset': 0}) %}
{% set articles = articlesArr.articles %}
{% set firstCount = articles | length %}




{% set popularArticles = getCache("popularArticles") %}
{% if (popularArticles is empty) %}
{% set popularArticles = _Article.getPopularArticles({ limit: 10, scope: 'network' }) %} 
    {% set cache = setCache("popularArticles", popularArticles, 500) %} 
{% endif %}

<!-- used to index each article as we loop over throughout the template -->
{% set articleCount = _AppHelper.getApplicationEnv() == 'DEV' ? 0 : 0 %}
{% set popCount = _AppHelper.getApplicationEnv() == 'DEV' ? 0 : 0 %}
{% set dev = _AppHelper.getApplicationEnv() == 'DEV' ? false : false %}


{# Remove "AAP" from the section title unless "AAP" is the only word #}
{% set title = this.title %}
{% set splitTitle = title | split(" ") %}
{% if splitTitle | length > 1 and splitTitle[0] | lower == 'aap' %}
    {% set title = splitTitle | slice(1, length) | join(" ") %}
{% endif %}



<main id="main" class="site-main section-page__main" role="main" data-article-limit="{{limit}}" data-article-count="{{articles | length}}">
    
    <div class="container">

        <section>
            <div class="row">
                <div class="col-sm-9 header">
                    <div class="hk">
                        <h2 class="{{site}}">{{title}}</h2>
                        <p></p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-9 col-xs-9">
                   {% if articles[articleCount] %}
                       {{this.render('partials/_single-article.twig', {
                           article: articles[articleCount],
                           position: articleCount + 1,
                           imageSize: {width:640, height:400},
                           site: site,
                           containerClass: 'home-feature-sm home-feature-tablet home-feature-mobile'
                       }) | raw}}
                       {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                   {% endif %}
                   

                </div>

                 <hr class="divide18 visible-sm-block visible-xs-block space-only">

                

                <div class="col-md-3 sm-two-cols">
                    <div class="row">
                
                        <div class="ad-square u-margin-bottom-15 hidden-xs hidden-sm" style="position:relative;">
                            <div class='advert-desktop' data-adsize="mrec"></div>
                        </div>                      

                     {% if articles[articleCount] %}
                            <div class="col-sm-1 col-md-9 col-xs-9">
                                <hr class="divide12 visible-md-block visible-lg-block space-only">                            
                                 {{this.render('partials/_single-article.twig', {
                                     article: articles[articleCount], 
                                     imageSize: {width:160, height:190},
                                     position: articleCount + 1,
                                     site: site,
                                     containerClass: 'feature-side feature-side-tablet card-sm-mobile'
                                 }) | raw}}
                                {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                                <hr class="divide visible-xs-block">
                            </div>
                     {% endif %}

                    <!-- extra story for tablet, mobile -->

                     {% if articles[articleCount] %}
                            <div class="col-sm-1 visible-sm-block">
                                 {{this.render('partials/_single-article.twig', {
                                     article: articles[articleCount], 
                                     imageSize: {width:160, height:190},
                                     position: articleCount + 1,
                                     site: site,
                                     containerClass: 'feature-side-tablet'
                                 }) | raw}}
                            </div>
                     {% endif %}

                    </div>
                </div>
            </div>

            <div class="row row-space desk-four-cols">

                {% for i in 0..3 if articles[articleCount] %}
                    {% set visibleClass = [' hidden-sm','','',''] %}
                    <div class="col-sm-3 col-md-1 col-xs-9">
                        {{this.render('partials/_single-article.twig', {
                            article: articles[articleCount], 
                            imageSize: {width:220, height:160},
                            position: articleCount + 1,
                            site: site,
                            containerClass: 'card-sm card-sm-tablet card-sm-mobile ' ~ visibleClass[i]
                        }) | raw}}
                        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                        {% if i < 3 %}<hr class="divide visible-xs-block">{% endif %}
                    </div>
                {% endfor %}

            </div>
        </section>

        <div class="ad-container hidden-xs">
            <div class='advert-desktop advert-tablet' data-adsize="banner"></div>
            
        </div>
        <div class="row visible-xs-block">
                <div class="ad-square col-xs-9">
                    <div class="row">
                        <hr class="divide">
                    </div>
                    <div class='advert-mobile' data-adsize="mrec"></div>
                    <div class="row">
                        <hr class="divide">
                    </div>
                </div>
                
         </div>


        <section class="">
                <div class="row">
                        {% for i in 0..2 if articles[articleCount] %}
                            <div class="col-md-3 col-sm-3 col-xs-9 ">
                                {{this.render('partials/_single-article.twig', {
                                    article: articles[articleCount], 
                                    imageSize: {width:600, height:320},
                                    position: articleCount + 1,
                                    site: site,                                  
                                    containerClass: 'card-sm-wide card-sm-wide-tablet card-sm-wide-mobile'
                                }) | raw}}
                                <hr class="divide visible-xs-block">                    
                                {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                            </div>
                        {% endfor %}
                </div>
        </section>
    </div>





    <div class="container u-desktop-margin-top-40 u-tablet-margin-top-20">
        <section>
            <div class="row">
                <div class="col-md-6 col-sm-9">
                    <div class="row">
                        {% for i in 0..8 if articles[articleCount] %}

                            <div class="col-md-3 col-sm-3">
                                {{this.render('partials/_single-article.twig', {
                                    article: articles[articleCount], 
                                    imageSize: {width:190, height:160},
                                    position: articleCount + 1,
                                    site: site,                               
                                    containerClass: 'card-sm card-sm-tablet card-sm-wide-mobile '
                                }) | raw}}
                                <hr class="divide visible-xs-block">
                                {% if i < 6 %}
                                    <hr class="divide18 visible-md-block visible-lg-block space-only">
                                    <hr class="divide10 visible-sm-block space-only">
                                {% endif %}

                            </div>

                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                        {% endfor %}
                    </div>
                </div>

                <div class="col-sm-9 visible-sm-block">
                    <div class="ad-container">
                        <div class='advert-tablet' data-adsize="banner"></div>
                        <div class='advert-mobile' data-adsize="mrec"></div>
                    </div>
                </div>

                <div class="col-md-3 visible-md-block visible-lg-block">
                    <div class="ad-square clearfixed">
                        <div class='advert-desktop' data-adsize="mrec"></div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-9 sm-two-cols {{ site }} u-desktop-margin-top-30">
                    <div class="row trending {{ site }} ">
                       <h2 class="col-sm-9 {{site}}">Trending stories</h2>

                        {% for i in 0..3 if popularArticles[popCount] %}
                            <div class="col-sm-1 col-md-9 col-xs-9">
                                {{this.render('partials/_single-article.twig', {
                                    article: popularArticles[popCount], 
                                    imageSize: {width:190, height:160},
                                    site: site,
                                    containerClass: 'feature-side feature-side-tablet card-sm-mobile '
                                }) | raw}}

                                {% set popCount = (dev) ? popCount : popCount + 1 %}
                                {% if i < 2 %}
                                    <hr class="divide18 hidden-xs">
                                    <hr class="divide visible-xs-block">
                                {% elseif i == 2 %}
                                    <hr class="divide18 visible-lg-block visible-md-block">
                                    <hr class="divide visible-xs-block">
                                {% elseif i > 2 %}
                                    <hr class="divide18 visible-lg-block visible-md-block">
                                    <div class="row visible-xs-block">
                                        <hr class="divide">
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>


                </div>
            </div>
        </section>

        <section class="row" id="loadmore_section" class="loadmore__section {{site}}"></section>
        
        <section class="loadmore__section {{site}}">

            {% if articles|length >= limit %}
                {{ this.render('/partials/ajaxarticles_new.twig', {
                    name            : "section-load",
                    label           : "",
                    buttonClass     : "u-display-none",
                }) | raw }}
            {% endif %}



        </section>

    </div>
</main><!-- .site-main -->


<script>
    // main script is defered so event listener makes sure
    // defered script is loaded before this runs
    document.addEventListener("DOMContentLoaded", function(event) {
        
        Acme.loadMore = new Acme.View.articleFeed({
            model           : new Card(),
            container       : 'loadmore_section',
            infinite        : true,
            offset          : {{limit}},
            limit           : 12,
            name            : 'section-load',
            blogid          : "{{ blogData['guid'] }}",
            card_class      : 'col-sm-3 col-xs-9 card-sm card-sm-tablet card-sm-mobile row-space40',
            ads             : true,
            non_pinned      : {{articleCount}}
        });


    });
</script>
