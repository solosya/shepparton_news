    {% endif %}    

    {% if sections['tennis'].feed.articles|length > 0 %}
        <div class="container">
            {{this.render('partials/index/row-three-ad.twig', {
                articles: sections['tennis'], 
                articleCount: articleCount,
                section: 'tennis',
                dev: dev,
                ad: 'div-gpt-ad-mrec-5',                
            }) | raw}} 
        </div>
    {% endif %}    


</main><!-- .site-main -->