{{ set(this, 'title', _Blog.getBlogTitle()) }}
{% set networkData = _Network.getNetworkData() %}
{% set site        = networkData.title | lower | split(" ")[0]%}


{# {{this.registerJs("Acme.cardController = Acme.CardController();")}}
{{this.registerJs("Acme.SectionController();")}}
 #}
{% set limit = 10 %}

{% set articlesArr = _Blog.getBlogFeed({'limit': limit, 'offset': 0}) %}
{% set articles = articlesArr.articles %}
{% set firstCount = articles | length %}


{{this.registerJs("Acme.cards = CardController();")}}

                                                     {# renders the card    fetch-limit      fetch-offset    infinite scroll #}
                                                     {#            ↑             ↑                 ↑            ↑            #}
{{this.registerJs("Acme.searchFeed = new Acme.View.articleFeed(Acme.cards, " ~ limit ~ ", " ~ firstCount ~ ", true);")}}



{% set popularArticles = _Article.getPopularArticles({ limit: 10, sortBy: 'VIEWS', scope: 'blog' }) %}




<!-- used to index each article as we loop over throughout the template -->
{% set articleCount = _AppHelper.getApplicationEnv() == 'DEV' ? 0 : 0 %}
{% set popCount = _AppHelper.getApplicationEnv() == 'DEV' ? 0 : 0 %}
{% set dev = _AppHelper.getApplicationEnv() == 'DEV' ? false : false %}



<main id="main" class="site-main" role="main" data-article-limit="{{limit}}" data-article-count="{{articles | length}}">
    
    <div class="container">

        <section>
            <div class="row">
                <div class="col-sm-9 header">
                    <div class="hk">
                        <h2>{{this.title}}</h2>
                        <p></p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-9">
                   {% if articles[articleCount] %}
                       {{this.render('partials/_single-article.twig', {
                           article: articles[articleCount],
                           position: articleCount + 1,
                           imageSize: {width:640, height:400},
                           site: site,
                           containerClass: 'home-feature-sm home-feature-mobile'
                       }) | raw}}
                       {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                   {% endif %}
        

                </div>

                <hr class="divide12 visible-sm-block visible-xs-block space-only col-sm-9">

                <div class="col-md-3 sm-two-cols">
                    <div class="row">
                
                        <div class="ad-square visible-md-block visible-lg-block col-sm-1 col-md-9" style="margin-bottom:15px;position:relative;">
                            <div id='section-mrec-1-desktop' class='advert'
                                data-site="{{site}}"
                                data-section="{{blogData.title | lower}}"
                                data-type="{{blogData.type | lower}}"
                            ></div> 
                        </div>

                        <div class="col-sm-1 col-md-9">
                            <hr class="divide18 visible-md-block visible-lg-block">                            
                            {{ this.render('partials/subscribe.twig') | raw }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <div class="container">
        <section>
            <div class="row">
                <div class="col-md-6 col-sm-5">
                    <div class="row">
                        {% for i in 0..8 if articles[articleCount] %}

                            <div class="col-md-3 col-sm-9">
                                {{this.render('partials/_single-article.twig', {
                                    article: articles[articleCount], 
                                    imageSize: {width:190, height:160},
                                    position: articleCount + 1,  
                                    site: site,                                   
                                    containerClass: 'card-sm feature-side-tablet card-sm-wide-mobile ' ~cardspace[i]
                                }) | raw}}
                                <hr class="divide visible-xs-block">
                                <hr class="divide18 visible-md-block visible-lg-block space-only">
                                <hr class="divide18 visible-sm-block">

                            </div>

                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    {% endfor %}

                        <div class="ad-container hidden-md hidden-lg" style="margin-bottom:50px">
                            <div id='section-mrec-3-mobile-tablet' class='advert'
                                data-site="{{site}}"
                                data-section="{{blogData.title | lower}}"
                                data-type="{{blogData.type | lower}}"
                            ></div> 
                        </div>

                        {% for i in 3..8 if articles[articleCount] %} 

                            <div class="col-md-3 col-sm-9">
                                {{this.render('partials/_single-article.twig', {
                                    article: articles[articleCount], 
                                    imageSize: {width:190, height:160},
                                    position: articleCount + 1,    
                                    site: site,                                 
                                    containerClass: 'card-sm feature-side-tablet card-sm-wide-mobile ' ~cardspace[i]
                                }) | raw}}
                                <hr class="divide visible-xs-block">
                                <hr class="divide18 visible-md-block visible-lg-block space-only">
                                <hr class="divide18 visible-sm-block">

                            </div>

                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                        {% endfor %}
                    </div>
                </div>

                <div class="col-md-3 col-sm-4 split trending dairy-override">
                   <h2>Trending stories</h2>

                    {% for i in 0..3 if popularArticles[popCount] %}
                        {{this.render('partials/_single-article.twig', {
                            article: popularArticles[popCount], 
                            imageSize: {width:190, height:160},
                            site: site,
                            containerClass: 'feature-side feature-side-tablet card-sm-mobile'
                        }) | raw}}

                        {% set popCount = (dev) ? popCount : popCount + 1 %}

                        <hr class="divide18">

                    {% endfor %}

                    <div class="ad-large-vert visible-sm-block" style="position:absolute;">
                        <div id='section-mrec-2-tablet' class='advert'
                                data-site="{{site}}"
                                data-section="{{blogData.title | lower}}"
                                data-type="{{blogData.type | lower}}"
                            ></div> 
                    </div>


                </div>

                <div class="col-md-3 visible-xs-block visible-md-block visible-lg-block">
                    <div class="ad-square clearfixed">
                        <div id='section-mrec-2-mobile-desktop' class='advert'
                            data-site="{{site}}"
                            data-section="{{blogData.title | lower}}"
                            data-type="{{blogData.type | lower}}"
                        ></div>
                    </div>
                </div>
            </div>
        </section>
        <section class="loadmore__section">
            <div class="row">
                {% if articles|length >= limit %}
                    {{ this.render('partials/ajaxarticles.twig', {
                        offset          : limit,
                        limit           : 12,
                        name            : "section-load",
                        non_pinned      : articlesArr.existingNonPinnedCount, 
                        ads             : "yes",
                        card_class      : "card-sm card-sm-tablet card-sm-mobile row-space40",
                        container       : "mainAjaxArticlescardClass",
                        buttonClass     : "infinite",
                        before          : '<div class="col-sm-3 col-xs-12">',
                        after           : '<hr class="divide18 visible-xs-block"></div>'
                    }) | raw }}
                {% endif %}

            </div>
        </section>
    </div>

</main><!-- .site-main -->