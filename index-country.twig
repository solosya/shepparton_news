{{ set(this, 'title', _Blog.getBlogTitle()) }}
{% set networkData = _Network.getNetworkData() %}
{% set blogData    = _Blog.getBlog() %}
{% set layout      = blogData.layout %}


{{this.registerJs("CardController();")}}

{% set templatePath = "window.Acme.templatePath = '" ~ networkData.templatePath ~ "';" %}
{{this.registerJs( templatePath )}}

{% set limit = 30 %}

{% set articlesArr = _Blog.getBlogFeed({'limit': limit, 'offset': 0}) %}
{% set articles = articlesArr.articles %}
{% set popularArticles = _Article.getPopularArticles({ limit: 5, sortBy: 'VIEWS', scope: 'network' }) %}

<!-- used to index each article as we loop over throughout the template -->
{% set articleCount = _AppHelper.getApplicationEnv() == 'DEV' ? 0 : 0 %}
{% set dev = _AppHelper.getApplicationEnv() == 'DEV' ? false : false %}


{% set sections =  {
        "dairy": {
            "feed": "",
            "link": "",
            "limit" : 10
        }, 
        "water": {
            "feed": "",
            "link": "",
            "limit" : 10
        },
        "horticulture": {
            "feed": "",
            "link": "",
            "limit" : 10
        },
        "videos": {
            "feed": "",
            "link": "",
            "limit" : 10
        },
        "bloggers": {
            "feed": "",
            "link": "",
            "limit" : 2
        }
    }
%}

{% for key, value in sections %}
    {% for blog in networkData.networkBlogs %}
        {% if blog.title | lower == key %}
            {% set sections = sections | merge({
                (key) : {
                    'feed': _Blog.getBlogFeed({'limit': sections[key]['limit'], 'offset': 0, 'blogid':blog.guid}),
                    'link' : blog.url
                    }
                }) %}
        {% endif %}
    {% endfor %}
{% endfor %}



    <main id="main" class="site-main" role="main" style="margin-bottom:0px;">
        
        <div class="container">

            <section class="home-main-stories">
                <div class="row">
                    <div class="col-xs-9 col-sm-6">

                        {% if articles[articleCount] %}                                                                
                            {{this.render('partials/_single-article.twig', {
                                article: articles[articleCount], 
                                position: articleCount + 1, 
                                imageSize: {width:900},
                                containerClass: 'home-feature home-feature-tablet home-feature-mobile'
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}

                        {% endif %}
                    </div>


                    {% if articles[articleCount] %}
                    <div class="cold-xs-9 col-sm-3">

                        <div id="weather" class="weather"></div>
                        <div class="visible-md-block visible-lg-block">
                            <div class="weather-dropdown hidden"></div>
                        </div>


                        <hr class="divide10 visible-xs-block" style="clear:both">


                        {% for i in 0..2 if articles[i] %}
                            {{this.render('partials/_single-article.twig', {
                                article: articles[articleCount], 
                                position: articleCount + 1, 
                                containerClass: 'feature-side feature-side-tablet feature-side-mobile'
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                            {% if i < 2 %}
                                <hr class="divide15 visible-md-block visible-lg-block">
                                <hr class="divide10 visible-xs-block visible-sm-block">
                            {% endif %}

                        {% endfor %}
                        <hr class="divide10 visible-xs-block">

                    </div><!-- .row-->
                    {% endif %}

                </div>
            </section><!-- .featured-slider-->


            <section class="middle">
                <div class="row">
                    <div class="col-sm-3 col-md-2 most-popular">
                        <h2>Most popular</h2>

                        {% for i in 0..4 if popularArticles[i] %}
                                {{this.render('partials/_single-article.twig', {
                                    article: popularArticles[i], 
                                    imageSuppress: true, 
                                    containerClass: 'card-popular'
                                }) | raw}}
                        {% endfor %}
                    </div>

                    <hr class="divide visible-xs-block">

                    <div class="col-sm-3 col-md-2">
                        {% if articles[articleCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: articles[articleCount], 
                                position: articleCount + 1, 
                                imageSize: {width:300},
                                containerClass: 'card-sm card-sm-mobile'
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                            <hr class="divide visible-xs-block">

                        {% endif %}
                    </div>


                    <div class="col-sm-3 col-md-2">

                        {% if articles[articleCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: articles[articleCount], 
                                position: articleCount + 1, 
                                imageSize: {width:300},
                                containerClass: 'card-sm card-sm-mobile'
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}

                        {% endif %}
                    </div>


                    <div class="col-sm-9 col-md-3 addSpaceMobile">

                        {% if articles[articleCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: articles[articleCount], 
                                position: articleCount + 1, 
                                imageSize: {width:600},
                                containerClass: 'card-sm card-sm-mobile'
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}

                        {% endif %}                        
                    </div>
                </div>                    

            </section>



            <div class="ad-container">
                <section class="advert advert-padding" style="background:gray;height:100px;"></section>
            </div>


            {% if sections['dairy'].feed.articles|length > 0 %}
                {% set regionalCount = (dev) ? articleCount : 0 %}

                <section class="row">
                    <div class="col-sm-9 section-header">
                        <p><a href="{{sections['dairy'].link}}">View All</a></p>
                        <div class="hk">
                            <h2>Dairy</h2>
                            <p></p>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        {% if sections['dairy'].feed.articles[regionalCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: sections['dairy'].feed.articles[regionalCount], 
                                imageSize: {width:409, height:530},
                                containerClass: 'home-feature-thin home-feature-thin-mobile'
                            }) | raw}}
                            {% set regionalCount = (dev) ? articleCount : regionalCount + 1 %}
                        {% endif %}
                    </div>
                    <div class="col-sm-2">
                        {% set cardspace = ['', 'row-space'] %}
                        {% for i in 0..1 if sections['dairy'].feed.articles[regionalCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: sections['dairy'].feed.articles[regionalCount], 
                                imageSize: {width:300},
                                containerClass: 'card-sm card-sm-mobile ' ~ cardspace[i]
                            }) | raw}}
                            {% set regionalCount = (dev) ? articleCount : regionalCount + 1 %}
                            <hr class="divide visible-xs-block">

                        {% endfor %}

                    </div>


                    <div class="col-sm-3">
                        <div style="margin-bottom:30px;position:relative;">
                            <div class="ad-square"></div>
                        </div>
                        
                        {% for i in 0..1 if sections['dairy'].feed.articles[regionalCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: sections['dairy'].feed.articles[regionalCount], 
                                imageSize: {width:300},
                                containerClass: 'feature-side feature-side-tablet feature-side-mobile'
                            }) | raw}}
                            {% set regionalCount = (dev) ? articleCount : regionalCount + 1 %}
                            {% if i == 0 %}
                                <hr class="divide">
                            {% endif %}

                        {% endfor %}

                    </div>
                </section>
            {% endif %}

            <div class="ad-container">
                <section class="advert advert-padding" style="background:gray;height:100px;"></section>
            </div>            


            {% if sections['bloggers'].feed.articles|length > 0 %}

                <section class="row">
                    <div class="col-sm-3"> 
                        <div class="bloggerImg">
                            <img src="{{networkData.templatePath}}/static/images/megaphone.svg">
                            <div>
                                <p class="header">Bloggers</p>
                                <p class="local">Your local news</p>
                            </div>

                        </div>
                    </div>


                    {% for i in 0..1 if sections['bloggers'].feed.articles[i] %}
                        <div class="col-sm-3">                                            

                            {{this.render('partials/_single-article.twig', {
                                article: sections['bloggers'].feed.articles[i], 
                                imageSuppress: true,
                                containerClass: 'card-blogger card-blogger-mobile'
                            }) | raw}}

                            {% if i == 0 %}
                                <hr class="divide visible-xs-block">
                            {% endif %}
                        </div>
                        
                    {% endfor %}

                </section>
            {% endif %}



            {% if sections['water'].feed.articles|length > 0 %}
                {% set regionalCount = (dev) ? articleCount : 0 %}

                <section class="row">
                    <div class="col-sm-9 section-header">
                        <p><a href="{{sections['water'].link}}">View All</a></p>
                        <div class="hk">
                            <h2>Water</h2>
                            <p></p>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        {% if sections['water'].feed.articles[regionalCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: sections['water'].feed.articles[regionalCount], 
                                imageSize: {width:409, height:530},
                                containerClass: 'home-feature-xs'
                            }) | raw}}
                            {% set regionalCount = (dev) ? articleCount : regionalCount + 1 %}
                        {% endif %}



                    </div>
                    <div class="col-sm-2">
                        {% set cardspace = ['', 'row-space'] %}
                        {% if sections['water'].feed.articles[regionalCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: sections['water'].feed.articles[regionalCount], 
                                imageSize: {width:300},
                                containerClass: 'card-sm card-sm-mobile ' ~ cardspace[i]
                            }) | raw}}
                            {% set regionalCount = (dev) ? articleCount : regionalCount + 1 %}
                            <hr class="divide visible-xs-block">

                        {% endif %}

                    </div>


                    <div class="col-sm-3">
                        
                        {% for i in 0..1 if sections['water'].feed.articles[regionalCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: sections['water'].feed.articles[regionalCount], 
                                imageSize: {width:300},
                                containerClass: 'feature-side feature-side-tablet feature-side-mobile'
                            }) | raw}}
                            {% set regionalCount = (dev) ? articleCount : regionalCount + 1 %}
                            {% if i == 0 %}
                                <hr class="divide">
                            {% endif %}

                        {% endfor %}

                    </div>
                </section>
            {% endif %}


            {% if sections['horticulture'].feed.articles|length > 0 %}
                {% set horticultureCount = (dev) ? articleCount : 0 %}

                <section class="row">
                    <div class="col-sm-9 section-header">
                        <p><a href="{{sections['horticulture'].link}}">View All</a></p>
                        <div class="hk">
                            <h2>Horticulture</h2>
                            <p></p>
                        </div>
                    </div>

                    {% for i in 0..2 if sections['horticulture'].feed.articles[horticultureCount] %}
                        <div class="col-sm-3 col-md-3">

                            {{this.render('partials/_single-article.twig', {
                                article: sections['horticulture'].feed.articles[horticultureCount], 
                                imageSize: {width:300},
                                containerClass: 'feature-side feature-side-tablet feature-side-mobile'
                            }) | raw}}
                            {% set horticultureCount = (dev) ? articleCount : horticultureCount + 1 %}

                            <hr class="divide visible-xs-block">

                        </div>
                    {% endfor %}

                </section>

                {% endif %}


        </div>

    </main><!-- .site-main -->

    <main class="site-main site-videos">
                <div class="container">

            <section class="middle" style="margin-bottom:0px;">

            {% if sections['videos'].feed.articles|length > 0 %}
                {% set sectionCount = (dev) ? articleCount : 0 %}

                <section class="row ">
                    <div class="col-sm-9 section-header">
                        <p><a href="{{sections['videos'].link}}">View All</a></p>
                        <div class="hk">
                            <h2>Videos</h2>
                            <p></p>
                        </div>
                    </div>

                    {% for i in 0..1 if sections['videos'].feed.articles[sectionCount] %}
                        <div class="col-sm-3 col-md-3">

                            {{this.render('partials/_single-article.twig', {
                                article: sections['videos'].feed.articles[sectionCount], 
                                imageSize: {width:300},
                                containerClass: 'card-sm card-sm-tablet card-sm-mobile'
                            }) | raw}}
                            {% set sectionCount = (dev) ? articleCount : sectionCount + 1 %}

                            <hr class="divide visible-xs-block">

                        </div>
                    {% endfor %}

                        <div class="col-sm-3 col-md-3">
                            <div style="margin-bottom:30px;position:relative;">
                                <div class="ad-square"></div>
                            </div>
                        </div>

                </section>

                {% endif %}

            </section>
        </div>
    </main>