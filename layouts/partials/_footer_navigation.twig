{% set policyClass = '' %}
{% if 'policy' in item.label | lower %}
{%   set policyClass = 'policy' %}
{% endif %}

<ul id="" class="{{ class }}">
    {% for item in items %}
       <li>
            <a href="{{item.link |raw}}" class="{{activeClass}} {{externalClass}} {{ policyClass }}" {% if item.target != "" %} target="{{item.target}}"{% endif %}>
                {% if item.label != "" %}
                    {{item.label}}
                {% elseif item.blogTitle != "" %}
                    {{item.blogTitle}}
                {% elseif item.pageTitle != "" %}
                    {{item.pageTitle}}
                {% endif %}
            </a>
        </li>
   {% endfor %}
</ul>