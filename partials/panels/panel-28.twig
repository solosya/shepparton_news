{% set articleCount = 0 %}
{% set articlelock = false %}

<section>
    <div class="row" data-template="panel-28">
        <div class="col-12">
            <div class="c-section-header">
                <a class="{{site}} c-section-header__link" href="{{link}}">
                    <h2 class="c-section-header__h2 {{site}}">{{title}}</h2>
                    {% if admin %}
                        <p class="c-section-header__panel-name">Panel 28</p>
                    {% endif %}

                </a>
            </div>
        </div>
    </div>

    <div class="row u-margin-top-20">

        <div class="col-12 col-lg-6">
            <div class="row">
                {% for i in 0..1 if articles[articleCount] %}
                    <div class="col-12 col-md-6">
                    {{this.render('../_single-article.twig', {
                        article         : articles[articleCount],
                        position        : articleCount + 1,
                        swap            : false,
                        imageSize       : {width:300, height:200},
                        site            : site,
                        dev             : dev,
                        containerClass  : 'card-105-mobile card-105-tablet card-105-desktop-sm card-105-desktop-lg'
                    }) | raw}}
                    {% set articleCount = (articlelock) ? articleCount : articleCount + 1 %}
                    {% if i < 2 %}
                        <hr class="divide20-25  d-none d-md-block d-lg-none">
                    {% endif %}

                    <hr class="divide20-25 d-block d-md-none">
                    </div>
                {% endfor %}
            </div>
        </div>


        <div class="col-12 col-md-12 col-lg-6">
            <div class="row">
                {% for i in 0..1 if articles[articleCount] %}
                    <div class="col-12 col-md-6">
                    {{this.render('../_single-article.twig', {
                        article         : articles[articleCount],
                        imageSize       : {width:300, height:200},
                        position        : articleCount + 1,
                        swap            : false,
                        site            : site,
                        dev             : dev,
                        containerClass  : 'card-105-mobile card-105-tablet card-105-desktop-sm card-105-desktop-lg'
                    }) | raw}}
                    {% set articleCount = (articlelock) ? articleCount : articleCount + 1 %}
                    </div>

                    {% if i < 1 %}
                        <hr class="divide20-25 d-block d-md-none">
                    {% endif %}


                {% endfor %}
            </div>
        </div>
    </div>

</section>
