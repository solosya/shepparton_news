{% set articleCount = 0 %}
{% set cardIndex = 1 %}
<div class="row">

<div class="col-sm-12">

    <div class="row u-margin-bottom-30" data-template="panel-20">

        <div class="col-sm-12">
            <div class="c-section-header  u-margin-top-30">
                <a class="{{site}}" href="{{link}}">
                    <h2 class="c-section-header__h2 {{site}}">{{title}}</h2>
                </a>
            </div>
        </div>
    </div>

    <div class="row" data-template="panel-20">

        {% for i in 0..3 if articles[articleCount] %}
            {#Below div clears the float on tablet#}
            {% if i == 2 %}
                <div class="visible-xs-block visible-sm-block" style="clear:both"></div>
            {% endif %}
            <div class="col-xs-6 col-sm-6 col-md-3">
                {{this.render('../_single-article.twig', {
                    article         : articles[articleCount],
                    position        : cardIndex,
                    imageSize       : {width:300, height:235},
                    site            : site,
                    containerClass  : 'card-102-mobile card-112-tablet card-102-desktop-sm card-102-desktop-lg'
                }) | raw}}
                {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% set cardIndex = cardIndex + 1 %}
                
                <hr class="divide25-30 hidden-xs">
            </div>
            
            {% if i == 1 or i == 3 %}
                <div class="col-xs-12 visible-xs-block" style="clear:both">
                    <hr class="visible-xs-block" style="clear:both">
                </div>
            {% endif %}

        {% endfor %}

    </div>

    <div class="row" data-template="panel-20">

        {% for i in 0..3 if articles[articleCount] %}
            {% if i == 2 %}
                <div class="visible-sm-block" style="clear:both"></div>
            {% endif %}
            <div class="col-sm-6 col-md-3">
                {{this.render('../_single-article.twig', {
                    article         : articles[articleCount],
                    position        : cardIndex,
                    styleType       : "image-bottom",
                    imageSize       : {width:95, height:95},
                    site            : site,
                    containerClass  : 'card-101-mobile card-101-tablet card-101-desktop-sm card-101-desktop-lg'
                }) | raw}}
                {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% set cardIndex = cardIndex + 1 %}
                {% if i < 2 %}
                    <hr class="divide25-30 visible-xs-block visible-sm-block">
                {% endif %}
                {# <hr class="divide25-30 visible-xs-block"> #}

            </div>
        {% endfor %}

    </div>

    <hr class="divide25-30 hidden-xs">
</div>
</div>
<div class="ad-square u-margin-top-30 u-mobile-no-margin-top u-desktop-no-margin-top">
    <div class='advert-desktop  desktop-banner' data-adsize="banner"></div>
    <div class='advert-tablet  tablet-banner' data-adsize="banner"></div>
    <div class='advert-mobile  mobile-mrec' data-adsize="mrec"></div>
</div>