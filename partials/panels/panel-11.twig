{% set articleCount = 0 %}
{% set articlelock = false %}


<div class="col-12 col-lg-9">
    <div class="row u-margin-bottom-20" data-template="panel-11">

        <div class="col-12">
            <div class="c-section-header">
                <a class="{{site}} c-section-header__link" href="{{link}}">
                    <h2 class="c-section-header__h2 c-section-header__h2--more {{site}}">{{title}}</h2>
                    {% if admin %}
                        <p class="c-section-header__panel-name">Panel 11</p>
                    {% endif %}
                </a>
            </div>
        </div>
    </div>

    <div class="row">

        {% for i in 0..2 if articles[articleCount] %}
            <div class="col-12 col-md-4">
                {{this.render('../_single-article.twig', {
                    article         : articles[articleCount],
                    site            : site,
                    dev             : dev,
                    cardId          : "moall",
                    containerClass  : 'card-103-mobile card-103-tablet card-103-desktop-sm card-103-desktop-lg'
                }) | raw}}
                {% set articleCount = (articlelock) ? articleCount : articleCount + 1 %}
                {% if i < 2 %}
                    <hr class="divide20-25 d-block d-md-none">
                {% endif %}
            </div>
        {% endfor %}
    </div>


    <div class="row">
        <div class="col-12">
            <hr class="divide20-25">
        </div>
    </div>

    <div class="row">
        {% for i in 0..1 if articles[articleCount] %}
            {% set pushClass = '' %}
            {% set marginClass = '' %}
            {% if i == 0 %}
                {% set pushClass = "u-desktop-borderElem--right" %}
                {% set marginClass = "u-desktop-padding-right-20" %}
            {% endif %}
            {% if i == 1 %}
                {#{% set pushClass="col-sm-offset-1" %}#}
                {% set marginClass = "u-desktop-padding-left-30" %}
            {% endif %}
            <div class="col-12 col-md-6 {{pushClass}} {{marginClass}}">
                {{this.render('../_single-article.twig', {
                    article         : articles[articleCount],
                    imageSize       : {width:90, height:90},
                    imageSizes      : {
                        "mobile"  : {width:75, height:75},
                        "tablet"  : {width:90, height:90},
                        "desktop" : {width:90, height:90},
                    },
                    dev             : dev,
                    cardId          : "coiule",
                    imageSource     : 'author',
                    site            : site,
                    containerClass  : 'card-106-mobile card-106-tablet card-106-desktop-sm card-106-desktop-lg'
                }) | raw}}
                {% set articleCount = (articlelock) ? articleCount : articleCount + 1 %}
                {% if i < 1 %}
                    <hr class="divide20-25 d-block d-md-none">
                {% endif %}
            </div>

        {% endfor %}

    </div>
</div>



