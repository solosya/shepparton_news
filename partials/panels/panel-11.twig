{% set articleCount = 0 %}


<div class="col-sm-9">
    <div class="row u-margin-bottom-30 " data-template="panel-11">
    
        <div class="col-sm-12">
            <div class="c-section-header  u-margin-top-30">
                <a class="{{site}}" href="{{link}}">
                    <h2 class="c-section-header__h2 {{site}}">{{title}}</h2>
                </a>
            </div>
        </div>
    </div>

    <div class="row">

        {% for i in 0..2 if articles[articleCount] %}
            {{this.render('../_single-article.twig', {
                article         : articles[articleCount], 
                imageSize       : {width:300, height:160},
                site            : site,
                containerClass  : 'col-sm-4 col-md-4 card-106-mobile card-106-tablet card-106-desktop-sm card-106-desktop-lg'
            }) | raw}}
            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
            
            {% if i < 2 %}
                <hr class="divide visible-xs-block" style="margin-left:15px;margin-right:15px;">
            {% else %}
                <hr class="divide visible-xs-block">
            {% endif %}
            
        {% endfor %}

    </div>


</div>



