{% set articleCount = 0 %}
{% set cardIndex = 1 %}
{% set dev = false %}
{% set articlelock = false %}

<div class="row">
    <div class="col-sm-12">
        <div class="row u-margin-bottom-20" data-template="panel-19">

            <div class="col-sm-12">
                <div class="c-section-header ">
                    <a class="{{site}}" href="{{link}}">
                        <h2 class="c-section-header__h2 {{site}}">{{title}}</h2>
                    </a>
                </div>
            </div>
        </div>

        <div class="row" data-template="panel-19">
            <div class="col-sm-12 col-md-6">
                <div class="row">
                    {# card 1 #}
                    <div class="col-sm-8 col-md-12">
                        {{this.render('../_single-article.twig', {
                            article         : articles[articleCount],
                            position        : cardIndex,
                            imageSize       : {width:470, height:445},
                            site            : site,
                            dev             : dev,
                            cardId          : "one",
                            containerClass  : 'card-100-mobile card-100-tablet card-100-desktop-sm card-100-desktop-lg'
                        }) | raw}}
                        {% set articleCount = (articlelock) ? articleCount : articleCount + 1 %}
                        {% set cardIndex = cardIndex + 1 %}
                        <hr class="divide20-25 hidden-sm">
                    </div>


                {% for i in 0..1 if articles[articleCount] %}
                    {# cards 2,3 #}
                    {% set mobilePadding = ["u-mobile-padding-right-7", "u-mobile-padding-left-7"] %}
                    <div class="col-xs-6 col-sm-4 col-md-6 {{mobilePadding[i]}}">
                        {{this.render('../_single-article.twig', {
                            article         : articles[articleCount],
                            position        : cardIndex,
                            imageSize       : {width:300, height:235},
                            site            : site,
                            dev             : dev,
                            cardId          : "two" ~ i,
                            containerClass  : 'card-102-mobile card-102-tablet card-102-desktop-sm card-102-desktop-lg'
                        }) | raw}}
                        {% set articleCount = (articlelock) ? articleCount : articleCount + 1 %}
                        {% set cardIndex = cardIndex + 1 %}
                        {% if loop.index == 1 %}
                            <hr class="divide20-25 visible-sm-block">
                        {% endif %}
                    </div>
                {% endfor %}
                </div>

                <div class="row">
                    <div class="col-sm-12 visible-xs-block visible-sm-block">
                        <hr class="divide20-25 visible-xs-block visible-sm-block">
                    </div>
                </div>
            </div>


            <div class="col-sm-6 col-md-3">
                <div class="row">
                {# cards 4,5,6,7 #}
                {% for i in 0..3 if articles[articleCount] %}
                    <div class="col-sm-12">
                        {{this.render('../_single-article.twig', {
                            article         : articles[articleCount],
                            position        : cardIndex,
                            imageSize       : {width:95, height:95},
                            styleType       : "image-bottom",
                            site            : site,
                            dev             : dev,
                            cardId          : "three" ~ i,
                            containerClass  : 'card-101-mobile card-101-tablet card-101-desktop-sm card-101-desktop-lg'
                        }) | raw}}
                        {% set articleCount = (articlelock) ? articleCount : articleCount + 1 %}
                        {% set cardIndex = cardIndex + 1 %}

                        {% if loop.index != 4  %}
                            <hr class="divide20-25">
                        {% endif %}
                        {% if loop.index == 4  %}
                            <hr class="divide20-25 visible-xs-block">
                        {% endif %}
                    </div>
                {% endfor %}
                </div>
            </div>



            <div class="col-sm-6 col-md-3">

                <div class="row">


                    <div class="col-sm-12 ad-square u-tablet-margin-bottom-20 u-desktop-margin-bottom-30" data-view="desktop-mrec">
                        <div class="advert-desktop desktop-mrec" data-adsize="mrec"></div>
                        <div class="advert-tablet tablet-mrec" data-adsize="mrec"></div>
                    </div>


                {% for i in 0..2 if articles[articleCount] %}
                    <div class="col-sm-12">
                        {# cards 8,9,10 #}

                        {{this.render('../_single-article.twig', {
                            article         : articles[articleCount],
                            position        : cardIndex,
                            styleType       : "image-bottom",
                            imageSize       : {width:95, height:95},
                            site            : site,
                            dev             : dev,
                            cardId          : "four" ~ i,
                            containerClass  : 'card-101-mobile card-101-tablet card-101-desktop-sm card-101-desktop-lg'
                        }) | raw}}
                        {% set articleCount = (articlelock) ? articleCount : articleCount + 1 %}
                        {% set cardIndex = cardIndex + 1 %}

                        {% if loop.index != 3  %}
                            <hr class="divide20-25">
                        {% endif %}
                    </div>
                {% endfor %}
                </div>
            </div>

        </div>
    </div>
</div>
