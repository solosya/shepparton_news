<section class="row">
    <div class="col-sm-3"> 
        <div class="bloggerImg">
            <img src="{{networkData.templatePath}}/static/images/megaphone.svg">
            <div>
                <p class="header">Bloggers</p>
                <p class="local">Your local news</p>
            </div>

        </div>
    </div>

    {% for i in 0..1 if articles.feed.articles[i] %}
        <div class="col-sm-3">                                            

            {{this.render('../_single-article.twig', {
                article: articles.feed.articles[i], 
                imageSuppress: true,
                containerClass: 'card-blogger card-blogger-mobile'
            }) | raw}}

            {% if i == 0 %}
                <hr class="divide visible-xs-block">
            {% endif %}
        </div>
        
    {% endfor %}

</section>