{% set articleCount = 0 %}

<section>
    <div class="row">
        <div class="col-md-9 section-header">
            <p><a class="{{site}}" href="{{link}}">View All</a></p>
            <div class="hk">
                <h2>{{ title }}</h2>
                <p></p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-sm-9">
           {% if articles[articleCount] %}
               {{this.render('../_single-article.twig', {
                   article:         articles[articleCount], 
                   imageSize:       {width:640, height:400},
                   site:            site,
                   containerClass: 'home-feature-sm home-feature-tablet home-feature-mobile'
               }) | raw}}
               {% set articleCount = (dev) ? 0 : articleCount + 1 %}
           {% endif %}


        </div>
        <div class="col-md-3 col-sm-9 sm-two-cols">

            <hr class="divide15 visible-sm-block space-only">
            <hr class="divide10 visible-xs-block space-only">

            <div class="row">
                <div class="col-sm-4">
                    <div class="ad-square mobad3" style="margin-bottom:30px;">
                        <div class='advert-desktop advert-tablet advert-mobile' data-adsize="mrec"></div>
                    </div>
                </div>

            <div class="col-sm-1 visible-sm-block"></div>

                <div class="col-md-9 visible-md-block visible-lg-block">
                    <hr class="divide12">
                </div>

                <div class="col-md-9 col-sm-1">
                    {% if articles[articleCount] %}
                        {{this.render('../_single-article.twig', {
                            article:        articles[articleCount], 
                            imageSize:      {width:80, height:95},
                            site:           site,
                            containerClass: 'feature-side feature-side-tablet card-sm-mobile'
                        }) | raw}}


                        {% set articleCount = (dev) ? 0 : articleCount + 1 %}
                    {% endif %}
                </div>

                <div class="col-md-9 visible-xs-block">
                    <hr class="divide">
                </div>
       
                <div class="col-md-9 col-sm-4" style="width:50%;">
                    {% if articles[articleCount] %}
                        {{this.render('../_single-article.twig', {
                            article:        articles[articleCount], 
                            imageSize:      {width:80, height:95},
                            site:           site,
                            containerClass: 'feature-side feature-side-tablet card-sm-mobile visible-sm-block'
                        }) | raw}}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="row row-space sm-two-cols">

        {% set visibleClass = ['visible-xs-block visible-md-block visible-lg-block divideright', 'divideright', 'divideright'] %}

        {% for i in 0..2 if articles[articleCount] %}
            
            <div class="col-md-3 col-sm-1 {{ visibleClass[i] }} ">
                {{this.render('../_single-article.twig', {
                    article:        articles[articleCount], 
                    imageSize:      {width:160, height:190},
                    site:           site,
                    containerClass: 'feature-side feature-side-tablet card-sm-mobile ' ~ visibleClass[i]
                }) | raw}}
                
                {% set articleCount = (dev) ? 0 : articleCount + 1 %}
                
                {% if i < 2 %}
                    <hr class="divide visible-xs-block">
                {% endif %}
            </div>
        {% endfor %}

    </div>
</section>