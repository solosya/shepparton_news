{% set articleCount = 0 %}

<section class="row" data-section="06">
    <div class="col-sm-12 section-header">
        <p><a class="{{site}}" href="{{link}}">View All</a></p>
        <div class="hk">
            <h2>{{ title }}</h2>
            <p></p>
        </div>
    </div>

    <div class="col-sm-12">
        {# ********************
                ROW 1
        ******************** #}
        <div class="row sm-two-cols">
            <div class="col-md-4 col-sm-1 col-xs-12">
                {% if articles[articleCount] %}
                    {{this.render('../_single-article.twig', {
                        article: articles[articleCount], 
                        imageSize: {width:414, height:255},
                        site: site,
                        containerClass: 'home-feature-xs home-feature-xs-tablet home-feature-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% endif %}

                <hr class="divide visible-xs-block space-only">

            </div>

            <div class="col-md-3 col-sm-1 col-xs-12">
                 {% if articles[articleCount] %}
                    {{this.render('../_single-article.twig', {
                        article: articles[articleCount], 
                        imageSize: {width:300, height:160},
                        site: site,
                        containerClass: 'card-sm feature-side-tablet card-sm-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    
                        <hr class="divide visible-xs-block visible-sm-block">

                {% endif %}

            </div>

            <div class="col-md-2 col-sm-1 col-xs-12">
                 {% if articles[articleCount] %}
                    {{this.render('../_single-article.twig', {
                        article: articles[articleCount], 
                        imageSize: {width:300},
                        site: site,
                        containerClass: 'card-sm feature-side-tablet card-sm-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    <div class="row">
                        <hr class="divide visible-xs-block">
                    </div>

                {% endif %}

            </div>
        </div>
    </div>


    
</section>