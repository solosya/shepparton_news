{% set articleCount = 0 %}
    
<section class="row">

    <div class="col-sm-9 section-header">
        <p><a href="{{link}}">View All</a></p>
        <div class="hk">
            <h2>{{ title }}</h2>
            <p></p>
        </div>
    </div>

    <div class="col-md-4 col-sm-6">
        {% if articles[articleCount] %}
            {{this.render('../_single-article.twig', {
                article:        articles[articleCount], 
                imageSize:      {width:409, height:530},
                site:           site,
                containerClass: 'home-feature-thin home-feature-thin-tablet home-feature-thin-mobile'
            }) | raw}}
            {% set articleCount = (dev) ? 0 : articleCount + 1 %}
        {% endif %}
        <hr class="divide visible-xs-block space-only">        


    </div>

    <div class="col-md-2 col-sm-3">
        {% set cardspace = ['', 'row-space'] %}
        {% for i in 0..1 if articles[articleCount] %}


            {{this.render('../_single-article.twig', {
                article:        articles[articleCount], 
                imageSize:      {width:195},
                site:           site,
                containerClass: 'card-sm card-sm-tablet card-sm-mobile ' ~ cardspace[i]
            }) | raw}}
            {% set articleCount = (dev) ? 0 : articleCount + 1 %}
            {% if i == 0 %}<hr class="divide visible-xs-block"> {% endif %}

        {% endfor %}

    </div>


    <hr class="divide visible-xs-block">


    <div class="col-md-3">

        
        {% for i in 0..1 if articles[articleCount] %}
            {# {% set colSet = [' divideright-ofs',' col-md-offset-0 col-sm-offset-1 col-xs-offset-0'] %} #}
            {# <div class="col-md-3 col-sm-4 col-xs-9{{ colSet[i] }}"> #}
            {{this.render('../_single-article.twig', {
                article: articles[articleCount], 
                imageSize: {width:300},
                site: site,
                containerClass: 'feature-side feature-side-tablet card-sm-mobile'
            }) | raw}}
            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
            
            {% if i == 1 %}
                <hr class="divide visible-xs-block">
            {% else %}
                <hr class="divide hidden-sm">
            {% endif %}

        {% endfor %}

        
        <div class="ad-square">
            <div id='{{ ad }}' class='advert'></div>
        </div>

        <div class="row">
            <hr class="divide visible-xs-block">
            <hr class="divide15 hidden-xs space-only">
        </div>


    </div>



</section>