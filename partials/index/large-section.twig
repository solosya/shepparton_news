{% set sectionCount = (dev) ? articleCount : 0 %}

<section class="row">
    <div class="col-sm-9 section-header">
        <p><a href="{{articles.link}}">View All</a></p>
        <div class="hk">
            <h2>{{ section }}</h2>
            <p></p>
        </div>
    </div>

    <div class="col-md-9 col-sm-9">
        <div class="row">
            <div class="col-sm-6 col-sm-6">
                {% if articles.feed.articles[sectionCount] %}
                    {{this.render('../_single-article.twig', {
                        article: articles.feed.articles[sectionCount], 
                        position: articleCount + 1, 
                        imageSize: {width:900},
                        containerClass: 'home-feature-sm home-feature-mobile'
                    }) | raw}}
                    {% set sectionCount = (dev) ? articleCount : sectionCount + 1 %}
                {% endif %}
            </div>


            <div class="col-md-3 col-sm-3">
                {% set classdivide = ['', 'visible-xs-block visible-sm-block'] %}
                {% for i in 0..1 if articles.feed.articles[sectionCount] %}
                    {{this.render('../_single-article.twig', {
                        article: articles.feed.articles[sectionCount], 
                        imageSuppress: true,
                        containerClass: 'feature-side feature-side-tablet feature-side-mobile'
                    }) | raw}}
                    {% set sectionCount = (dev) ? articleCount : sectionCount + 1 %}
                   
                    <hr class="divide15 {{classdivide[i]}}">
                {% endfor %}
            
                {% if articles.feed.articles[sectionCount] %}
                    {{this.render('../_single-article.twig', {
                        article: articles.feed.articles[sectionCount], 
                        imageSuppress: true,
                        containerClass: 'feature-side feature-side-tablet feature-side-mobile visible-xs-block visible-sm-block'
                    }) | raw}}
                    <hr class="divide visible-xs-block">
                {% endif %}



                <div class="ad-large-vert visible-md-block visible-lg-block" style="margin-top:30px;position:absolute;">
                    <div id='{{ ad }}' class="google_ad">
                        <script type='text/javascript'>
                            googletag.cmd.push(function() { googletag.display('{{ ad }}'); });
                        </script>
                    </div>
                </div>
            </div>

        </div>

        <div class="row row-space">
            <div class="col-sm-9 col-md-6">
                <div class="row">
                    <div class="col-md-3 col-sm-3 events">
                        <h2>Events</h2>
                        {% for i in 0..4 if events[i] %}
                            {{this.render('../_single-event.twig', {
                                event: events[i],
                                imageSize: {width: 90},
                                containerClass: 'card-event'
                            }) | raw}}
                            <hr class="divide12">

                        {% endfor %}
                    </div>

                    <div class="col-sm-6 col-md-6">
                        <div class="row">
                            <div class="col-sm-9 col-md-9">

                                {% if articles.feed.articles[sectionCount] %}
                                    {{this.render('../_single-article.twig', {
                                        article: articles.feed.articles[sectionCount], 
                                        imageSize: {width:900},
                                        containerClass: 'card-rec-full visible-md-block visible-lg-block'
                                    }) | raw}}
                                    {% set sectionCount = (dev) ? articleCount : sectionCount + 1 %}
                                    <hr class="divide visible-xs-block">
                                {% endif %}

                            </div>
                        </div>

                        <div class="row two-cols row-space md">

                            {% for i in 0..1 if articles.feed.articles[sectionCount] %}
                                <div class="col-sm-1">                                            
                                    {{this.render('../_single-article.twig', {
                                        article: articles.feed.articles[sectionCount], 
                                        imageSize: {width:188},
                                        containerClass: 'card-sm card-sm-mobile'
                                    }) | raw}}
                                    {% set sectionCount = (dev) ? articleCount : sectionCount + 1 %}
                                    <hr class="divide visible-xs-block">
                                </div>
                            {% endfor %}
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>