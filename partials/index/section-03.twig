{% set articleCount = 0 %}
    
<section class="row">
    <div class="col-sm-9 section-header">
        <p><a href="{{link}}">View All</a></p>
        <div class="hk">
            <h2>{{ title }}</h2>
            <p></p>
        </div>
    </div>

    <div class="col-md-9 col-sm-9">
        
        
        {# ********************
                ROW 1
        ******************** #}
        <div class="row">
            <div class="col-sm-4 col-xs-9">
                {% if articles[articleCount] %}
                    {{this.render('../_single-article.twig', {
                        article: articles[articleCount], 
                        imageSize: {width:414, height:255},
                        site: site,
                        containerClass: 'home-feature-xs home-feature-tablet home-feature-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : sectionCount + 1 %}
                {% endif %}

                <hr class="divide visible-xs-block space-only">
            </div>
            <div class="col-md-3 col-sm-5 col-xs-9">
         
                {% if articles[articleCount] %}
                   
                    {{this.render('../_single-article.twig', {
                        article:        articles[articleCount], 
                        imageSize:      {width:300},
                        site:           site,
                        containerClass: 'card-sm-wide feature-side-tablet card-sm-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    
                   <hr class="divide visible-xs-block visible-sm-block">
                {% endif %}
            </div>


            <div class="col-md-2 col-sm-5 col-xs-9">
                {% if articles[articleCount] %}

                    {{this.render('../_single-article.twig', {
                        article:        articles[articleCount], 
                        imageSize:      {width:195},
                        site:           site,
                        containerClass: 'card-sm feature-side-tablet card-sm-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? 0 : articleCount + 1 %}
                    <hr class="divide visible-xs-block">

                {% endif %}

            </div>
        </div>
    </div>





    <div class="col-md-9 col-sm-9">


        {# ********************
                ROW 2
        ******************** #}

        <div class="row u-margin-top-40 u-mobile-no-margin-top">

            {% for i in 0..2 if articles[articleCount] %}
                <div class="col-md-2 col-sm-3 col-xs-9">
                    {{this.render('../_single-article.twig', {
                        article:        articles[articleCount], 
                        imageSize:      {width:195},
                        site:           site,
                        containerClass: 'card-sm card-sm-tablet card-sm-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? 0 : articleCount + 1 %}
                    <hr class="divide visible-xs-block">
                </div>
            {% endfor %}
            
            <div class="col-sm-3 col-xs-9">
                <hr class="divide15 visible-sm-block">

                 {% if articles[articleCount] %}
                        {{this.render('../_single-article.twig', {
                            article:        articles[articleCount], 
                            imageSize:      {width:300},
                            site:           site,
                            containerClass: 'card-sm-wide card-sm-wide-tablet card-sm-mobile'
                        }) | raw}}
                        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                        
                       <hr class="divide visible-xs-block">
                    {% endif %}

            </div>
            <div class="col-sm-6 visible-sm-block two-cols u-margin-top-30">
                {% set tabletCount = articleCount %}
                    {% for i in 0..1 if articles[tabletCount] %}
                        <div class="col-sm-1">
                            {{this.render('../_single-article.twig', {
                                article:        articles[tabletCount], 
                                imageSize:      {width:300, height:300},
                                site:           site,
                                containerClass: 'card-sm-tablet' 
                            }) | raw}}
                            {% set tabletCount = (dev) ? 0 : tabletCount + 1 %}
                        </div>                         
                    {% endfor %}

            </div>
        </div>
    </div>





    <div class="col-md-9 col-sm-9">

        {# ********************
                ROW 3
        ******************** #}

        <div class="row u-margin-top-40 u-mobile-no-margin-top">
            
            <div class="col-md-6 hidden-sm col-xs-9">
                <div class="row">
                    {% for i in 0..3 if articles[articleCount] %}
                        <div class="col-md-3 col-sm-3 col-xs-9 large-split">
                            {% set theDivider = [' divideright','',' divideright',''] %}
                            {{this.render('../_single-article.twig', {
                                article:        articles[articleCount], 
                                imageSize:      {width:80, height:90},
                                site:           site,
                                containerClass: 'feature-side feature-side-tablet card-sm-mobile' 
                            }) | raw}}
                            {% set articleCount = (dev) ? 0 : articleCount + 1 %}
                            {% if i < 2 %}
                                <hr class="divide18 hidden-xs">
                            {% endif %} 
                            <hr class="divide visible-xs-block">
                        </div>                         
                    {% endfor %}
                </div>
            </div>

            <div class="col-sm-5 visible-sm-block">

                {% if articles[tabletCount] %}
                           
                    {{this.render('../_single-article.twig', {
                        article:        articles[tabletCount], 
                        imageSize:      {width:300},
                        position:       tabletCount,
                        site:           site,
                        containerClass: 'card-sm-wide-tablet'
                    }) | raw}}
                    {% set tabletCount = (dev) ? tabletCount : tabletCount + 1 %}
                
                {% endif %}
            </div>

            <div class="col-md-3 col-sm-4 col-xs-9 ad-square">
                 <div id='{{ ad }}' class='advert' style="float:right;"></div>
            </div>
        </div>
    </div>






    <div class="col-md-9 col-sm-9">

        {# ********************
                ROW 4
        ******************** #}

        <div class="row u-margin-top-40 u-mobile-no-margin-top">
            <hr class="divide visible-xs-block">
            <div class="col-sm-3 col-xs-9">

                {% if articles[articleCount] %}
                       
                    {{this.render('../_single-article.twig', {
                        article:        articles[articleCount], 
                        imageSize:      {width:300},
                        site:           site,
                        containerClass: 'card-sm-wide card-sm-wide-tablet card-sm-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    
                   <hr class="divide visible-xs-block">
                {% endif %}

            </div>


            {% for i in 0..3 if articles[articleCount] %}
                <div class="col-md-3 col-sm-3 col-xs-9">
                    {% set theDivider = [' divideright','',' divideright',''] %}
                    {{this.render('../_single-article.twig', {
                        article:        articles[articleCount], 
                        imageSize:      {width:80, height:90},
                        site:           site,
                        containerClass: 'feature-side feature-side-tablet card-sm-mobile' ~ theDivider[i]
                    }) | raw}}
                    {% set articleCount = (dev) ? 0 : articleCount + 1 %}
                    {% if i < 2 %}
                        <hr class="divide18 hidden-xs">
                    {% endif %} 
                    <hr class="divide visible-xs-block">
                </div>                         
            {% endfor %}

        </div>
    </div>

</section>