{% set articleCount = 0 %}
{% set cardIndex = 0 %}

{% set layout = layout is defined ? layout : false %}


{% set five_rowExceptions = ['country'] %}
{% set popularExceptions  = ['dairy'] %}
{% set bottomExceptions   = ['country', 'dairy'] %}



{% if layout == 'breaking news' %}
<section class="breaking-news">
    <div class="row">

        <div class="col-md-9">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="breaking-news_subhead">Greater Shepparton</h2>
                    <h1 class="breaking-news_header breaking-news_header@md">Breaking News</h1>
                </div>
                <div class="col-md-3 hidden-sm hidden-xs">
                    <div class="weather j-weather-panel"></div>
                    <div class="weather-dropdown hidden j-weather-panel-dropdown"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row u-mobile-margin-bottom-20">
        <div class="col-md-9">
            {% if articles[articleCount] %}                                                                
                {{this.render('../_single-article.twig', {
                    article         : articles[articleCount], 
                    position        : articleCount + 1, 
                    imageSize       : {width:970, height:478},
                    site            : site,
                    dev:            dev,
                    containerClass  : 'home-feature home-feature-tablet home-feature-mobile index-feature'
                }) | raw}}
                {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% set cardIndex = cardIndex + 1 %}

            {% endif %}
        </div>
    </div>
</section>

{% endif %}







{# CARD 1 #}
{# We don't show the normal top part if minor breaking news layout  #}
{% if not layout %}
<section class="home-main-stories">
    <div class="row">
        <div class="col-xs-9 col-sm-9 col-md-6">
            {% if articles[articleCount] %}                                                                
                {{this.render('../_single-article.twig', {
                    article: articles[articleCount], 
                    position: cardIndex + 1, 
                    imageSize: {width:640, height:400},
                    site: site,
                    swap: false,
                    dev:dev,
                    containerClass: 'home-feature home-feature-tablet home-feature-mobile index-feature'
                }) | raw}}
                {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% set cardIndex = cardIndex + 1 %}

            {% endif %}
        </div>


        {% if articles[articleCount] %}
            <div class="col-xs-9 col-sm-9 col-md-3 sm-two-cols">
                <div class="row">

                    <hr class="divide15 visible-xs-block visible-sm-block space-only">

                    <div class="col-sm-1 col-md-9 hidden-sm">
                        <div class="weather j-weather-panel"></div>
                        <div class="weather-dropdown j-weather-panel-dropdown hidden"></div>
                        <hr class="divide10 visible-sm-block" style="margin-top: 50px;">
                    </div>

                    <hr class="divide10 visible-xs-block" style="clear:both">
                      


                    {# CARD 2,3,4, (5) #}
                    {% for i in 0..3 if articles[i] %}
                
                        {% set class = ['', '', '', 'visible-sm-block'] %}
                        <div class="col-sm-1 col-md-9">
                            {{this.render('../_single-article.twig', {
                                article: articles[articleCount],
                                imageSize: {width:95},
                                position: cardIndex + 1, 
                                site: site,
                                swap: false,
                                dev:dev,
                                containerClass: 'feature-side feature-side-tablet card-sm-mobile ' ~ class[i]
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                            {% set cardIndex = cardIndex + 1 %}

                            {% if i < 2 %}
                                <hr class="divide15 visible-md-block visible-lg-block">
                                <hr class="divide10 visible-xs-block">                             
                            {% endif %}
                            <hr class="divide10 visible-sm-block">  
                        </div>
                    {% endfor %}

                    {% if site not in five_rowExceptions %}
                        <hr class="divide10 visible-xs-block" style="margin-left:15px;margin-right:15px;">
                    {% else %}
                        <hr class="divide15 visible-xs-block">
                    {% endif %}

                </div>
            </div>
        {% endif %}

    </div>
</section>

{% endif %}


    {# We go back as we added an extra card above that is only to be seen on tablet  #}
    {% if not dev and layout %}
        {% set articleCount = articleCount - 1 %}
    {% elseif (not layout) %}
        {% set cardIndex = cardIndex - 1 %}
    {% endif %}


    {% if site not in five_rowExceptions %}


        {# *****************************************
                    MOBILE AND DESKTOP 
        *****************************************  #}
        <section class="row five-cols top-stories-row visible-xs-block visible-md-block visible-lg-block">
            

            {% for i in 0..4 if articles[articleCount] %}
                {{this.render('../_single-article.twig', {
                    article: articles[articleCount], 
                    position: cardIndex + 1, 
                    imageSize: {width:500},
                    site: site,
                    swap: false,
                    dev:dev,
                    containerClass: 'col-sm-1 top-stories top-stories-tablet top-stories-mobile'
                }) | raw}}
                {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                {% set cardIndex = cardIndex + 1 %}
                {% if i < 4 %}    
                    <hr class="divide10 visible-xs-block" style="margin-left:15px;margin-right:15px;">
                {% else %}
                    <hr class="divide10 visible-xs-block">
                {% endif %}

            {% endfor %}
        </section>


        {# We go back as we 5 extra cards above that are not to be seen on tablet  #}
        {% if not dev %}
            {% set articleCount = articleCount - 4 %}
        {% else %}
            {% set cardIndex = cardIndex - 4 %}
        {% endif %}




                            {# *****************************************
                                        TABLET ONLY 
                            *****************************************  #}
                            <section class="row sm-two-cols visible-sm-block">

                                {% for i in 0..3 if articles[articleCount] %}
                                    <div class="col-sm-1">
                                        {{this.render('../_single-article.twig', {
                                            article: articles[articleCount], 
                                            position: cardIndex + 1, 
                                            imageSize: {width:500},
                                            site: site,
                                            dev:dev,
                                            swap: false,
                                            containerClass: 'feature-side feature-side-tablet card-sm-mobile'
                                        }) | raw}}
                                        {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                                        {% set cardIndex = cardIndex + 1 %}
                                        {% if i < 2 %}
                                            <hr class="divide10 visible-sm-block">
                                        {% endif %}

                                    </div>
                                {% endfor %}
                            </section>


    {% endif %}


        






{% if site not in popularExceptions %}
    {% set popularArticles = _Article.getPopularArticles({ limit: 5, scope: 'network' }) %}

    <section>
        <div class="row u-margin-top-30 u-mobile-no-margin-top u-desktop-no-margin-top">


            {# ************ MOST POPULAR ************   #}
            <div class="col-sm-3 col-md-2 most-popular">
                <h2>Most popular</h2>

                {% for i in 0..4 if popularArticles[i] %}
                    {{this.render('../_single-article.twig', {
                        article: popularArticles[i], 
                        imageSuppress: true,
                        swap: false,
                        containerClass: 'card-popular'
                    }) | raw}}
                {% endfor %} 
            </div>
            {# ************ END ************   #}



            <hr class="divide visible-xs-block">






            <div class="col-sm-3 col-md-2">
                {% if articles[articleCount] %}
                    {{this.render('../_single-article.twig', {
                        article: articles[articleCount], 
                        position: cardIndex + 1, 
                        imageSize: {width:300},
                        site: site,
                        swap: false,
                        dev:dev,
                        containerClass: 'card-sm card-sm-tablet card-sm-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    {% set cardIndex = cardIndex + 1 %}
                    <hr class="divide visible-xs-block">

                {% endif %}
            </div>


            <div class="col-sm-3 col-md-2">
                {% if articles[articleCount] %}
                    {{this.render('../_single-article.twig', {
                        article: articles[articleCount], 
                        position: cardIndex + 1, 
                        site: site,
                        swap: false,
                        dev:dev,
                        containerClass: 'card-sm card-sm-tablet card-sm-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    {% set cardIndex = cardIndex + 1 %}
                    
                {% endif %}
            </div>
            <hr class="divide visible-xs-block">

            <div class="col-sm-9 col-md-3">
                <div class="ad-square u-margin-top-30 u-mobile-no-margin-top u-desktop-no-margin-top">
                    <div id='{{ ad }}' class='advert'></div>
                </div>
            </div>
        </div>
    </section>
{% endif %}










{% if site not in bottomExceptions %}

    <section>

        <div class="row row-space">
            <hr class="divide visible-xs-block">
            <div class="col-sm-3">
                {% if articles[articleCount] %}
                    {{this.render('../_single-article.twig', {
                        article: articles[articleCount], 
                        position: cardIndex + 1, 
                        imageSize: {width:300},
                        site: site,
                        swap: false,
                        dev:dev,
                        containerClass: 'card-sm-wide card-sm-wide-tablet card-sm-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    {% set cardIndex = cardIndex + 1 %}
                    
                    <hr class="divide visible-xs-block">

                {% endif %}
            </div>


            <div class="col-sm-3">
                {% if articles[articleCount] %}
                    {{this.render('../_single-article.twig', {
                        article: articles[articleCount], 
                        position: cardIndex + 1, 
                        imageSize: {width:300},
                        site: site,
                        swap: false,
                        dev:dev,
                        containerClass: 'card-sm-wide card-sm-wide-tablet card-sm-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    {% set cardIndex = cardIndex + 1 %}
                    <hr class="divide visible-xs-block">
                {% endif %}


            </div>
            <div class="col-sm-3">
                {% for i in 0..1 if articles[articleCount] %}
                    {{this.render('../_single-article.twig', {
                        article: articles[articleCount], 
                        position: cardIndex + 1, 
                        imageSize: {width:300},
                        site: site,
                        swap: false,
                        dev:dev,
                        containerClass: 'feature-side feature-side-tablet card-sm-mobile'
                    }) | raw}}
                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                    {% set cardIndex = cardIndex + 1 %}
                    
                    {% if i == 0 %}
                        <hr class="divide">
                    {% endif %}
                {% endfor %}

            </div>
            <hr class="divide10 visible-xs-block">
        </div>

    </section>
{% endif %}