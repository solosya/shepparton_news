{% set sectionCount = (dev) ? articleCount : 0 %}

<section class="home-main-stories">
    <div class="row">
        <div class="col-xs-9 col-sm-9 col-md-6">
            {% if articles.feed.articles[sectionCount] %}                                                                
                {{this.render('../_single-article.twig', {
                    article: articles.feed.articles[sectionCount], 
                    position: sectionCount + 1, 
                    imageSize: {width:640, height:400},
                    site: site,
                    containerClass: 'home-feature home-feature-tablet home-feature-mobile'
                }) | raw}}
                {% set sectionCount = (dev) ? sectionCount : sectionCount + 1 %}

                <hr class="divide15 visible-sm-block visible-xs-block space-only">

            {% endif %}
        </div>

        {% if articles.feed.articles[sectionCount] %}
            <div class="col-xs-9 col-sm-9 col-md-3">
                <div class="row">

                    {% for i in 0..2 if articles.feed.articles[i] %}
                        <div class="col-sm-3 col-md-9">
                            {{this.render('../_single-article.twig', {
                                article: articles.feed.articles[sectionCount], 
                                position: sectionCount + 1, 
                                site: site,
                                containerClass: 'feature-side card-sm-tablet card-sm-mobile'
                            }) | raw}}
                            {% set sectionCount = (dev) ? sectionCount : sectionCount + 1 %}
                            {% if i < 2 %}
                                <hr class="divide12 visible-md-block visible-lg-block">
                                <hr class="divide10 visible-xs-block">
                                <hr class="divide10 visible-sm-block space-only">                               
                            {% endif %}
                        </div>
                    {% endfor %}

                    <div class="col-sm-1 col-md-9">
                        <hr class="divide12 space-only">
                        <a href="{{articles.link}}">
                            <div class="visible-md-block visible-lg-block view-all-sport">
                                View all local sport
                            </div>
                        </a>
                    </div>

                </div>
            </div>
        {% endif %}

    </div>
</section>

