<section>
    <div class="row">
        <div class="col-sm-9 section-header">
            <div class="hk">
                <h2>Following</h2>
                <p></p>
            </div>
        </div>

        <div class="col-md-9 col-sm-5">
            <div class="row">
                <ul class="profile-list">
                    {% if false %}
                        {% for blog in userOwnerBlogs %}
                            <li>
                                <a href="{{blog.url}}">{{Html.encode(blog.title)}}</a>
                            </li>
                        {% endfor %}
                    {% else %}
                        <li class='no-data'>No authors found.</p>
                    {% endif %}
                </ul>
            </div>
        </div>


        <div class="tabbable tabbable-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#FollowingBlogs" data-toggle="tab">Blogs</a></li>
                <li><a href="#FollowingWriters" data-toggle="tab">Writers</a></li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane fade in active" id="FollowingBlogs">
                    <div class="portlet-body">
                        <ul class="profile-list">
                            {% if myBlogs | length > 0 %}
                                {% for following in myBlogs %}
                                    <li>
                                        <span>
                                            <span class="fs16">{{Html.encode(following.blog['title'])}}</span>
                                            <span class="email-spacer">{{following.blog['url']}}</span>
                                        </span>
                                    </li>
                                    {% endfor %}
                            {% else %}
                                <li class="no-data">User is not following any blog(s).</li>
                            {% endif %}
                        </ul>
                    </div>
                </div>

                <div class="tab-pane" id="FollowingWriters">
                    <div class="portlet-body">
                        <ul class="profile-list">
                            {% if myFollowings | length > 0 %}
                                {% for following in myFollowings %}
                                    <li>
                                        <span>
                                            <span class="fs16">{{Html.encode(following.writer['name'])}}</span>
                                            <span class="email-spacer">{{following.writer['url']}}</span>
                                        </span>
                                    </li>
                                    {% endfor %}
                            {% else %}
                                <li class="no-data">User is not following any writers.</li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

